@model IEnumerable<dynamic>


@{
    Layout = "~/Views/Shared/_Layout.Dashboard.cshtml";
    ViewData["Title"] = "View Users";
}

<h2>All Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Road</th>
            <th>District</th>
            <th>Division</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.MobileNo</td>
                <td>@user.Road</td>
                <td>@user.District</td>
                <td>@user.Division</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
