@{
    Layout = "_Layout.Dashboard";
    ViewData["Title"] = "All Users";
}

<!-- Header Row -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <a asp-controller="Admin" asp-action="AssignDisease" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Assign Disease
    </a>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<!-- Users Table -->
<div class="table-responsive">
    <table class="table table-striped table-hover shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Road</th>
                <th>District</th>
                <th>Division</th>
                <th style="width: 160px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.MobileNo</td>
                    <td>@user.Road</td>
                    <td>@user.District</td>
                    <td>@user.Division</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="m-0 p-0">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
