@{
    Layout = "~/Views/Shared/_Layout.AdminLogin.cshtml";
    ViewData["Title"] = "Admin Login";
}

<div class="auth container">
    <div class="auth-split">
        <!-- Left image -->
        <div class="auth-media" style="background-image:url('/images/admin-login.jpg');">
            <div class="overlay"></div>
            <div class="media-caption">
                <h2>Welcome Back, Admin</h2>
                <p>Sign in to manage users, vaccines & content.</p>
            </div>
        </div>

        <!-- Right login panel -->
        <div class="auth-panel">
            <h2>Admin Login</h2>
            <form method="post" asp-controller="Admin" asp-action="Login" class="form">
                <input type="text" name="Username" placeholder="Username" required />
                <input type="password" name="Password" placeholder="Password" required />

                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
        </div>
    </div>
</div>
