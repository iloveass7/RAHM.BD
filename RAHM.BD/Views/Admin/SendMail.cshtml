@{
    Layout = "~/Views/Shared/_Layout.Dashboard.cshtml";
    ViewData["Title"] = "Send Mail";
}

<h2>Send Mail</h2>

<form class="form">
    <label>Choose District:</label>
    <select>
        <option>Dhaka</option>
        <option>Chittagong</option>
    </select>

    <label>Subject:</label>
    <input type="text" />

    <label>Message:</label>
    <textarea></textarea>

    <button type="submit" class="btn">Send Mail</button>
</form>
