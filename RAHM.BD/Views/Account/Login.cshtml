@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}
<section class="auth auth-split">
    <!-- Left: photo only (no caption/overlay) -->
    <div class="auth-media" style="background-image:url('@Url.Content("~/images/login.jpg")');">
    </div>

    <!-- Right: caption now appears where Login heading was -->
    <div class="auth-panel">
        <div class="panel-caption">
            <h2>Welcome to RAHMBD</h2>
            <p class="muted">Your health companion—secure and simple.</p>
        </div>

        <form asp-action="Login" method="post" class="form">
            <label>Email</label>
            <input name="email" type="email" placeholder="you@example.com" required />

            <label>Password</label>
            <input name="password" type="password" placeholder="••••••••" required />

            <button class="btn btn-primary w-100" type="submit">Sign in</button>
        </form>

        <div class="or">OR</div>

        <div class="providers">
            <button type="button" class="btn btn-google w-100" aria-label="Continue with Google">
                <span class="icon" aria-hidden="true">
                    <!-- Google "G" -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 48 48">
                        <path fill="#FFC107" d="M43.611 20.083H42V20H24v8h11.303C33.98 32.662 29.422 36 24 36c-6.627 0-12-5.373-12-12s5.373-12 12-12c3.059 0 5.842 1.156 7.961 3.039l5.657-5.657C34.6 6.053 29.6 4 24 4 12.955 4 4 12.955 4 24s8.955 20 20 20c10 0 19-7.5 19-20 0-1.333-.139-2.667-.389-3.917z" />
                        <path fill="#FF3D00" d="M6.306 14.691l6.571 4.817C14.465 16.126 18.879 12 24 12c3.059 0 5.842 1.156 7.961 3.039l5.657-5.657C34.6 6.053 29.6 4 24 4 15.317 4 7.986 8.999 6.306 14.691z" />
                        <path fill="#4CAF50" d="M24 44c5.35 0 10.244-2.043 13.912-5.369l-6.418-5.424C29.32 34.105 26.816 35 24 35c-5.393 0-9.937-3.318-11.693-7.957l-6.58 5.068C8.433 38.982 15.62 44 24 44z" />
                        <path fill="#1976D2" d="M43.611 20.083H42V20H24v8h11.303c-1.341 3.162-4.469 5.4-8.303 5.4-3.184 0-5.97-1.789-7.357-4.4l-6.58 5.068C14.82 38.682 19.2 41 24 41c10 0 19-7.5 19-20 0-1.333-.139-2.667-.389-3.917z" />
                    </svg>
                </span>
                Continue with Google
            </button>

        </div>


        <p class="muted small">No account? <a asp-action="Signup">Create one</a>.</p>
    </div>
</section>
