@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<section class="auth auth-split">
    <!-- Left: photo only (no caption/overlay) -->
    <div class="auth-media" style="background-image:url('@Url.Content("~/images/login2.jpg")');">
    </div>

    <!-- Right: caption now appears where Login heading was -->
    <div class="auth-panel">
        <div class="panel-caption">
            <h2>Welcome to RAHMBD</h2>
            <p class="muted">Your health companion—secure and simple.</p>
        </div>

        <form asp-action="Login" method="post" class="form">
            <label>Email</label>
            <input name="email" type="email" placeholder="you@example.com" required />

            <label>Password</label>
            <input name="password" type="password" placeholder="••••••••" required />

            <button class="btn btn-primary w-100" type="submit">Sign in</button>
        </form>

        <div class="or">OR</div>

        


        <p class="muted small">No account? <a asp-action="Signup">Create one</a>.</p>
    </div>
</section>
