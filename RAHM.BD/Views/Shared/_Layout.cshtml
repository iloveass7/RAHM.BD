@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>RAHMBD</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="layout-wrapper">
        <!-- Top Navbar -->
        <header class="nav">
            <div class="container nav-inner">
                <a asp-controller="Home" asp-action="Index" class="brand">
                    <span class="brand-logo">❤</span> RAHMBD
                </a>
                <nav class="nav-links">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    <a asp-controller="Home" asp-action="RequestCenter" class="nav-link">Request</a>
                    <a asp-controller="Home" asp-action="RequestVaccine" class="nav-link">Vaccine</a>
                    <a asp-controller="Home" asp-action="Medicine" class="nav-link">Medicine</a>
                    <a asp-controller="Health" asp-action="Tips" class="nav-link">Tips</a>
                </nav>
                <div class="nav-cta">
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <!-- Show profile -->
                        <a href="/UserDashboard" class="nav-link">
                            <img src="~/images/user.png" alt="Profile"
                                 style="width:32px;height:32px;border-radius:50%; border:2px solid #fff; background:#eee; padding:2px;" />
                        </a>

                    }
                    else
                    {
                        <!-- Show Login/Signup -->
                        <a asp-controller="Account" asp-action="Signup" class="btn btn-light">Signup</a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-light">Login</a>
                    }

                </div>




            </div>
        </header>

        <!-- Page Content -->
        <main class="container page">
            @if (TempData["Msg"] != null)
            {
                <div class="toast">@TempData["Msg"]</div>
            }
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="footer">
            <div class="container footer-inner">
                <div>© @DateTime.UtcNow.Year RAHMBD</div>
                <div class="footer-links">
                    <a asp-controller="Health" asp-action="Tips">Health Tips</a>
                    <a href="#">Privacy</a>
                    <a href="#">Terms</a>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
